@model SearchFormViewModel

@{
    ViewData["Title"] = "Doctors";
}

<form class="row g-3 pt-4" asp-action="Search"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-update="#Result"
      data-ajax-failure="showErrorMessage">
    <div class="card">
        <div class="card-body p-4">
            <h5 class="mb-4">Find a doctor</h5>
            <div class="d-flex align-items-center">
                <i class="bi bi-search fs-5 me-2 text-muted"></i>
                <input asp-for="Value" class="form-control me-3 search-input w-50" placeholder="Search by mobile, national ID or email ..." />
                <button class="btn btn-primary px-4" type="submit">Search</button>
            </div>
        </div>
    </div>
</form>

<div id="Result"></div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}