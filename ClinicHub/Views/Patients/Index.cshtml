@model IEnumerable<PatientViewModel>

@{
	ViewData["Title"] = "Patients";
}

<div class="pagetitle">
	<div class="d-flex justify-content-between">
		<div>
			<h1>Patients</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Home</a></li>
					<li class="breadcrumb-item active">Patients</li>
				</ol>
			</nav>
		</div>
		<div>
			<a href="javascript:;" class="btn btn-sm mt-1 p-2 js-render-modal" style="background-color: #4154f1; color: white;"
				data-title="Add Patient"
				data-url="/Patients/Create">
				<i class="bi bi-plus-lg"></i>
				Add Patient
			</a>
		</div>
	</div>
</div>
<div class="card">
    <div class="card-body">
		@if (!Model.Any())
		{
			<div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-top: 18px;">
				<i class="bi bi-exclamation-triangle me-1"></i>
				No Patients found!
			</div>
		}
		else
		{
			<div class="datatable-container">
				<table id="js-datatable" class="table">
					<thead>
						<tr>
							<th>Name</th>
							<th>Phone Number</th>
							<th>City</th>
							<th>Next Appointment</th>
							<th>last Appointment</th>
							<th>Register Date</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var patient in Model)
						{
							<partial name="_PatientRow" model="@patient" />
						}
					</tbody>
				</table>
			</div>			
		}
    </div>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}