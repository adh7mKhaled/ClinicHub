@model PatientFormViewModel

<form class="row g-3 pt-4" asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
	data-ajax-method="post"
	data-ajax="true"
	data-ajax-success="showSuccessMessage"
	data-ajax-failure="showErrorMessage">
	<div class="row">
		@if (Model?.Id > 0)
		{
			<input type="hidden" asp-for="Id"/>
		}
		<div class="col md-5">
			<div class="row">
				<div class="col mb-4">
					<input type="text" class="form-control" placeholder="Name" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<input type="text" class="form-control" placeholder="Email" asp-for="Email">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<div class="form-group">
						<select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()">
							<option value="">-- Select Gender --</option>
						</select>
						<span asp-validation-for="Gender" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<div class="form-group">
						<select asp-for="MaritalStatus" class="form-select" asp-items="Html.GetEnumSelectList<MaritalStatus>()">
							<option value="">-- Select Marital Status --</option>
						</select>
						<span asp-validation-for="MaritalStatus" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<input class="form-control" placeholder="Phone Number" asp-for="MobileNumber">
					<span asp-validation-for="MobileNumber" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<input type="text" class="form-control" placeholder="City" asp-for="City">
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<input type="date" class="form-control" asp-for="DateOfBirth" />
					<span asp-validation-for="DateOfBirth" class="text-danger d-block"></span>
				</div>
			</div>
			<div class="row">
				<div class="col mb-4">
					<textarea type="text" class="form-control" placeholder="Notes" asp-for="Notes"></textarea>
					<span asp-validation-for="Notes" class="text-danger d-block"></span>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="form-check form-switch form-check-solid form-check-custom mb-4">
						<input class="form-check-input" type="checkbox" asp-for="HasWhatsApp">
						<label class="form-check-label" asp-for="HasWhatsApp"></label>
					</div>
				</div>
			</div>
		</div>
	</div>
	<partial name="_ModalFooter" />
</form>