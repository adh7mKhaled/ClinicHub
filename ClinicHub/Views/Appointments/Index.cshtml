@model IEnumerable<AppointmentViewModel>

<div id="appointmentsTableWrapper">
    <h6 class="fw-bold text-secondary mb-3">
        <i class="bi bi-list-check me-1"></i> Current Appointments
    </h6>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Date</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.DoctorName</td>
                        <td>@item.AppointmentDate.ToShortDateString()</td>
                        <td>@item.TimeSlot</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No appointments found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>