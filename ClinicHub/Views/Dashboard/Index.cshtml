@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var index = 1;
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                        <div class="card-body">
                            <h5 class="card-title">Patients</h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@Model.NumberOfPatients</h6>
                                    <div class="small text-muted mt-1">
                                        <div class="small-muted">New this month: @Model.MonthlyPatientCount</div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <a href="#" class="text-primary small fw-bold">See Details <i class="bi bi-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                        <div class="card-body">
                            <h5 class="card-title">Appointments</h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-calendar-week"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@Model.NumberOfAppointments</h6>
                                    <div class="small text-muted mt-2">
                                        <i class="bi bi-clock text-primary"></i> Today: @Model.NumberOfTodayAppointments <br>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <a asp-controller="Appointments" class="text-primary small fw-bold">See Details <i class="bi bi-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                        <div class="card-body">
                            <h5 class="card-title">Doctors</h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-lungs"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@Model.NumberOfDoctors</h6>
                                    <div class="small text-muted mt-1">
                                        <div class="small-muted">New this month: @Model.MonthlyDoctorCount</div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <a href="#" class="text-primary small fw-bold">See Details <i class="bi bi-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card">
                        <div class="filter me-3">
                            <div id="AppointmentReportRange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                                <i class="fa fa-calendar"></i>&nbsp;
                                <span></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Appointments <span>/Per Day</span></h5>
                            <div id="AppointmentsPerDay" style="height: 350px;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Left side columns -->
        <!-- Right side columns -->
        <div class="col-lg-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Today’s Appointments <span class="text-muted small">| @DateTime.Now.ToString("dd MMM yyyy")</span>
                    </h5>

                    <div class="table-responsive" style="height: 400px; overflow-y: auto;">
                        @if (Model.TodayAppointments.Any())
                        {
                            <table class="table table-hover table-sm align-middle mb-0">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th>#</th>
                                        <th>Patient</th>
                                        <th>Time</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appt in Model.TodayAppointments)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@appt.PatientName</td>
                                            <td>@DateTime.Parse(appt.AppointmentTime).ToString("hh:mm tt")</td>
                                            <td>
                                                <span class="badge @(appt.Status.Equals(AppointmentStatus.Scheduled) ? "bg-primary" : appt.Status.Equals(AppointmentStatus.Cancelled) ? "bg-warning" : "bg-success")">
                                                    @(appt.Status.Equals(AppointmentStatus.Scheduled) ? "Scheduled" : appt.Status.Equals(AppointmentStatus.Cancelled) ? "Cancelled" : "Completed")
                                                </span>
                                            </td>
                                        </tr>
                                        index++;
                                    }

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info alert-dismissible fade show" role="alert" style="margin-top: 10px;">
                                No appointments for today!
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body pb-0">
                    <h5 class="card-title">Budget Report <span>| This Month</span></h5>

                </div>
            </div>
            <div class="card">
                <div class="card-body pb-0">
                    <h5 class="card-title">Website Traffic <span>| Today</span></h5>

                </div>
            </div>

        </div>
        <!-- End Right side columns -->

    </div>
</section>

@section Scripts {
    <script src="~/js/appointment.js" asp-append-version="true"></script>
}